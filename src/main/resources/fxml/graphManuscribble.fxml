<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Accordion?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.StackPane?>

<AnchorPane xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ch.unifr.hisdoc2.graphmanuscribble.controller.Controller">
   <children>
      <BorderPane fx:id="borderPane" layoutX="-1.0" layoutY="-1.0">
         <center>
            <ScrollPane fx:id="scrollPane" BorderPane.alignment="CENTER">
              <content>
                <AnchorPane minHeight="0.0" minWidth="0.0">
                     <children>
                        <StackPane fx:id="stackPane" />
                     </children>
                  </AnchorPane>
              </content>
            </ScrollPane>
         </center>
         <top>
            <MenuBar BorderPane.alignment="CENTER">
              <menus>
                <Menu mnemonicParsing="false" text="File">
                  <items>
                    <MenuItem mnemonicParsing="false" text="Load Image" />
                        <MenuItem mnemonicParsing="false" text="Save" />
                        <MenuItem mnemonicParsing="false" onAction="#exportGraph" text="Export" />
                        <MenuItem mnemonicParsing="false" onAction="#closeApplication" text="Close" />
                  </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Help">
                  <items>
                    <MenuItem mnemonicParsing="false" text="About" />
                  </items>
                </Menu>
              </menus>
            </MenuBar>
         </top>
         <right>
            <Accordion BorderPane.alignment="CENTER">
              <panes>
                <TitledPane animated="false" text="Annotate">
                  <content>
                    <AnchorPane minHeight="0.0" minWidth="0.0">
                           <children>
                              <Button layoutX="14.0" layoutY="90.0" mnemonicParsing="false" text="New Annotation" />
                              <Button layoutX="135.0" layoutY="90.0" mnemonicParsing="false" text="Delete Annotation" />
                              <ToggleButton fx:id="deannotateButton" layoutX="14.0" layoutY="49.0" mnemonicParsing="false" onAction="#changeAnnotationModus" text="Deannotate" />
                              <ChoiceBox fx:id="annotationBox" layoutX="14.0" layoutY="14.0" prefWidth="150.0" />
                           </children>
                        </AnchorPane>
                  </content>
                </TitledPane>
                <TitledPane animated="false" text="Layout">
                  <content>
                    <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                           <children>
                              <Slider layoutX="14.0" layoutY="33.0" />
                              <Label layoutX="14.0" layoutY="14.0" prefHeight="17.0" prefWidth="134.0" text="Hull Tightness" />
                              <Label layoutX="14.0" layoutY="73.0" prefHeight="17.0" prefWidth="134.0" text="Strock Thickness" />
                              <Slider layoutX="14.0" layoutY="90.0" />
                           </children>
                        </AnchorPane>
                  </content>
                </TitledPane>
              </panes>
            </Accordion>
         </right>
      </BorderPane>
   </children>
</AnchorPane>
